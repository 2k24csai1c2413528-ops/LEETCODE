class Solution {
public:
    int partitionDisjoint(vector<int>& nums) {
        int n = nums.size();
        int leftMax = nums[0];
        int overallMax = nums[0];
        int partitionIdx = 0;

        for (int i = 1; i < n; i++) {
            if (nums[i] < leftMax) {
                partitionIdx = i;
                leftMax = overallMax;
            } else {
                overallMax = max(overallMax, nums[i]);
            }
        }
        return partitionIdx + 1;
    }
};
